---
import Instagram from "../assets/instagram.svg";
import LogoFooter from "./public/Elohim-Logo-White.svg";
import Whatsapp from "../assets/whatsapp.svg";
import Tiktok from "../assets/tiktok.svg";
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-content-logo">
      <LogoFooter />
    </div>
    <div class="footer-content-links">
      <ul class="footer-links">
        <li><a href="#faq">Preguntas frecuentes</a></li>
        <li><a href="#trabaja-con-nosotros">Trabaja con nosotros</a></li>
        <li><a href="#como-nos-valoran">Como nos valoran</a></li>
      </ul>
    </div>
  </div>
  <div class="footer-line"></div>
  <div class="footer-bottom">
    <p>
      &copy; {new Date().getFullYear()} Elohim Reformas. Todos los derechos reservados.
    </p>
    <span
      >Powered by <a href="https://www.linkedin.com/in/brianzenhom/"
        >VividEncodeâ„¢</a
      ></span
    >
  </div>
</footer>

<style>
  .footer {
    padding-top: 2rem;
    padding-bottom: 1rem;
    background-color: #3d0814;
    color: #fff;
    font-family: "Onest";
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 1px;
    transition: all 0.1s ease-out;
  }

  .footer-line {
    height: 1px;
    background: linear-gradient(to right, #1a334700, #b9b8b8, #e98a1500);
    margin: 0;
    width: 1280px;
    margin: 0 auto;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
    list-style: none;
    text-decoration: none;
    color: #fff;
  }

  .footer-content-links {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .footer-links a {
    color: #b9b8b8;
    text-decoration: none;
    font-size: 14px;
  }
  .footer-links a:hover {
    text-decoration: underline;
    color: #b9b8b8;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    max-width: 1280px;
    padding-bottom: 2rem;
  }

  .footer-content-socials .instagram-icon {
    width: 24px;
    height: 24px;
  }
  .footer-icons {
    width: 24px;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    max-width: 1280px;
    margin: 0 auto;
    padding-top: 1rem;
    color: gray;
  }

  .footer-bottom span {
    color: gray;
    text-decoration: none;
    font-size: 14px;
  }

  .footer-bottom p {
    font-size: 14px;
    font-family: "Onest";
    font-weight: 500;
    letter-spacing: 1px;
    transition: all 0.1s ease-out;
  }
</style>
