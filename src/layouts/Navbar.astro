---
import Logo from "../assets/Elohim.svg";
import Whatsapp from "../assets/whatsapp.svg";
import Instagram from "../assets/instagram.svg";
import Phone from "../assets/phone.svg";

const links = [
  { href: "#inicio", text: "Inicio" },
  { href: "#services", text: "Servicios" },
  { href: "#about", text: "Sobre nosotros" },
  { href: "#testimonios", text: "Testimonials" },
];
---

<nav class="navbar">
  <header class="navbar-content">
    <div class="logo-container">
      <a href="/">
        <Logo />
      </a>
    </div>
    <div class="nav-center">
      <ul class="nav-links">
        {
          links.map((link) => (
            <li>
              <a href={link.href}>{link.text}</a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="nav-right">
      <button class="burger-menu" aria-label="Toggle navigation menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="nav-links nogap">
        <li><a href="tel:+34624350394" class="phone-link"><Phone /></a></li>
        <li>
          <a
            href="https://wa.me/+34624350394"
            target="_blank"
            class="whatsapp-link"><Whatsapp /></a
          >
        </li>
        <li>
          <a
            href="https://www.instagram.com/elohimedifica"
            target="_blank"
            class="whatsapp-link"><Instagram /></a
          >
        </li>
      </ul>
    </div>
  </header>
  <div class="mobile-menu">
    <button class="close-menu" aria-label="Close menu">
      <span></span>
      <span></span>
    </button>
    <ul class="mobile-nav-links">
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.text}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style>
  .navbar {
    background-color: #f5efe7;
    padding: 1rem;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    transition:
      background-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .logo {
    width: 180px;
  }
  .navbar-content {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .nav-center {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .logo-container {
    display: flex;
    align-items: center;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-links.nogap {
    gap: 1rem;
  }

  .nav-links li a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-links li a:hover {
    color: #000;
  }

  .phone-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .whatsapp-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .instagram-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .burger-menu {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    transition: transform 0.3s ease;
  }

  .burger-menu span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: #333;
    margin: 5px 0;
    transition: all 0.3s ease;
  }

  .burger-menu.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .burger-menu.active span:nth-child(2) {
    opacity: 0;
  }

  .burger-menu.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    right: -60%;
    width: 60%;
    height: 100vh;
    background-color: #f5efe7;
    padding: 2rem;
    box-shadow: -10px 0 20px rgba(0, 0, 0, 0.2);
    z-index: 1001;
    transition: all 0.4s cubic-bezier(0.17, 0.67, 0.12, 1);
    opacity: 0;
    visibility: hidden;
  }

  .mobile-menu.active {
    right: 0;
    opacity: 1;
    visibility: visible;
  }

  .close-menu {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 20px;
    width: 20px;
    z-index: 1002;
  }

  .close-menu span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #333;
    transition: all 0.3s ease;
  }

  .close-menu:hover span {
    background-color: #000;
  }

  .close-menu:active span {
    transform: scale(0.9);
  }

  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    list-style: none;
    margin: 0;
    padding: 0;
    font-family: "Onest", sans-serif;
    font-size: 16px;
  }

  .mobile-nav-links li {
    margin: 2rem 0;
  }

  .mobile-nav-links li a {
    font-size: 24px;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
    letter-spacing: 0.5px;
    font-weight: 600;
    color: #333;
    text-decoration: none;
  }

  .mobile-nav-links li a:hover {
    color: #000;
  }

  @media (max-width: 900px) {
    .nav-center {
      display: none;
    }

    .nav-right {
      gap: 1rem;
    }

    .nav-links.nogap {
      display: flex;
      gap: 1rem;
    }

    .burger-menu {
      display: block;
    }

    .mobile-menu {
      display: block;
    }
  }

  @media (max-width: 490px) {
    .logo {
      width: 120px;
    }
  }
</style>

<script>
  const burgerMenu = document.querySelector<HTMLElement>(".burger-menu");
  const mobileMenu = document.querySelector<HTMLElement>(".mobile-menu");
  const closeMenu = document.querySelector<HTMLElement>(".close-menu");

  if (burgerMenu && mobileMenu && closeMenu) {
    burgerMenu.addEventListener("click", () => {
      mobileMenu.classList.toggle("active");
      burgerMenu.classList.toggle("active");
    });

    closeMenu.addEventListener("click", () => {
      mobileMenu.classList.remove("active");
      burgerMenu.classList.remove("active");
    });

    // Close menu when clicking outside
    document.addEventListener("click", (e) => {
      const target = e.target as Node;
      if (
        mobileMenu &&
        burgerMenu &&
        !mobileMenu.contains(target) &&
        !burgerMenu.contains(target)
      ) {
        mobileMenu.classList.remove("active");
        burgerMenu.classList.remove("active");
      }
    });

    // Close menu when clicking on a link
    mobileMenu.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (target.tagName === "A") {
        mobileMenu.classList.remove("active");
        burgerMenu.classList.remove("active");
      }
    });
  }
</script>
