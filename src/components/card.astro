---
interface Props {
  title: string;
  description: string;
  image?: string;
  icon?: any;
}

const { title, description, image, icon: Icon } = Astro.props;
---

<div class="card">
  <div class="card-content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
  <div class="card-icon">
    {Icon && <Icon class="icon-wrapper" aria-hidden="true" />}
  </div>
  <img src={image} alt={title} />
</div>
<style>
  .card-children {
    margin-top: 1rem;
  }
  .card-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1rem;
  }
  .icon-wrapper {
    display: inline-block;
  }
</style>

<style>
  .card {
    overflow: hidden;
    flex: 1;
    padding: 2rem;
    border-radius: 5px;
    margin-top: 2rem;
    position: relative;
    max-height: 240px;
    min-height: 240px;
  }

  .card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
      to top,
      rgba(255, 255, 255, 0.05) 10%,
      rgba(0, 0, 0, 0.726)
    );
    z-index: 0;
  }

  .card img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .card-content {
    position: relative;
    z-index: 1;
    color: white;
  }

  .card-icon {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    position: absolute;
    bottom: 0;
    right: 2rem;
    background-color: white;
    border-radius: 50%;
    color: #1a3347;
    padding: 0.5rem;
    z-index: 1;
  }
</style>
